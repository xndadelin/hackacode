<% if current_user %>
  <div class="container mx-auto py-32">
    <h1 class="text-5xl font-bold text-center">Welcome back, <%= current_user.email %>!</h1>
    <p class="text-center mt-4 text-lg">Ready for a new challenge?</p>
    <% if notice.present? %>
      <div class="flex justify-center mt-4">
        <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 text-center font-medium rounded-md inline-block" id="notice"><%= notice %></p>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="min-h-screen w-full flex flex-col justify-center">
    <div class="container mx-auto">
      <h1 class="text-6xl font-bold text-center">Welcome to Hackacode!</h1>
      <p class="text-center mt-4 text-lg">A platform for coding challenges and contests.</p>
      <div class="flex justify-center mt-8">
        <%= link_to "Start coding", new_user_registration_path, class: "btn btn-primary btn-lg shadow-lg" %>
      </div>
      <div class="flex justify-center mt-12">
        <img src="https://hc-cdn.hel1.your-objectstorage.com/s/v3/877c50b3b3034492ed81b482ca015d55eb716a2b_terminal.png" alt="Terminal preview" class="rounded-xl max-w-3xl w-full" loading="lazy" />
      </div>
    </div>
  </div>
<% end %>