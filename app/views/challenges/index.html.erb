<% content_for :title, "Challenges" %>

<div class="container mx-auto py-10">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Challenges</h1>
    <%= link_to "New challenge", new_challenge_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="challenges" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @challenges.any? %>
      <% @challenges.each do |challenge| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <%= render challenge %>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No challenges found.</p>
    <% end %>
  </div>
</div>
