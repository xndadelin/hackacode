<% if current_user && current_user.super_admin? %>
  <div class="max-w-screen w-full bg-base-200 rounded-2xl shadow-xl p-8 mt-8">
      <%= form_with(model: challenge, class: "space-y-6") do |form| %>
      <% if challenge.errors.any? %>
        <div id="error_explanation" class="alert alert-error mb-6">
          <h3 class="font-bold mb-2">
            <%= pluralize(challenge.errors.count, "error") %> prohibited this challenge from being saved:
          </h3>
          <ul class="list-disc ml-6">
            <% challenge.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-control">
        <%= form.label :title, class: "label font-normal" do %>
          Title <span class="text-red-500">*</span>
        <% end %>
        <%= form.text_field :title, class: "input input-bordered w-full", required: true %>
      </div>

      <div class="form-control">
        <%= form.label :slug, class: "label font-normal" do %>
          Slug <span class="text-red-500">*</span>
        <% end %>
        <%= form.text_field :slug, class: "input input-bordered w-full", required: true %>
      </div>

      <div class="form-control">
        <%= form.label :description, class: "label font-normal" do %>
          Description <span class="text-red-500">*</span>
        <% end %>
        <%= form.text_area :description, rows: 4, class: "textarea textarea-bordered w-full", required: true %>
      </div>

      <div class="form-control">
        <%= form.label :difficulty, class: "label font-normal" do %>
          Difficulty <span class="text-red-500">*</span>
        <% end %>
        <%= form.number_field :difficulty, class: "input input-bordered w-full", required: true %>
      </div>

      <div class="form-control grid grid-cols-2 gap-4">
        <div>
          <%= form.label :time_limit, class: "label font-normal" do %>
            Time limit <span class="text-red-500">*</span>
          <% end %>
          <%= form.number_field :time_limit, class: "input input-bordered w-full", required: true %>
        </div>
        <div>
          <%= form.label :memory_limit, class: "label font-normal" do %>
            Memory limit <span class="text-red-500">*</span>
          <% end %>
          <%= form.number_field :memory_limit, class: "input input-bordered w-full", required: true %>
        </div>
      </div>

      <div class="form-control">
        <%= form.label :input_format, class: "label font-normal" do %>
          Input format <span class="text-red-500">*</span>
        <% end %>
        <%= form.text_area :input_format, rows: 2, class: "textarea textarea-bordered w-full", required: true %>
      </div>

      <div class="form-control">
        <%= form.label :output_format, class: "label font-normal" do %>
          Output format <span class="text-red-500">*</span>
        <% end %>
        <%= form.text_area :output_format, rows: 2, class: "textarea textarea-bordered w-full", required: true %>
      </div>

      <div class="form-control grid grid-cols-2 gap-4">
        <div>
          <%= form.label :sample_input, class: "label font-normal" do %>
            Sample input <span class="text-red-500">*</span>
          <% end %>
          <%= form.text_area :sample_input, rows: 2, class: "textarea textarea-bordered w-full", required: true %>
        </div>
        <div>
          <%= form.label :sample_output, class: "label font-normal" do %>
            Sample output <span class="text-red-500">*</span>
          <% end %>
          <%= form.text_area :sample_output, rows: 2, class: "textarea textarea-bordered w-full", required: true %>
        </div>
      </div>

      <div class="form-control">
        <%= form.label :starter_code, class: "label font-normal" do %>
          Starter code <span class="text-red-500">*</span>
        <% end %>
        <%= form.text_area :starter_code, rows: 4, class: "textarea textarea-bordered w-full font-mono", required: true %>
      </div>

      <div class="form-control">
        <%= form.label :solution_code, class: "label font-normal" do %>
          Solution code <span class="text-red-500">*</span>
        <% end %>
        <%= form.text_area :solution_code, rows: 4, class: "textarea textarea-bordered w-full font-mono", required: true %>
      </div>

      <div class="form-control">
        <%= form.label :source_url, class: "label font-normal" %>
        <%= form.text_field :source_url, class: "input input-bordered w-full", required: true %>
      </div>

      <div class="form-control flex items-center gap-2">
        <%= form.label :published, class: "label font-normal" %>
        <%= form.check_box :published, class: "checkbox" %>
      </div>

      <div class="mt-8">
        <%= form.submit class: "btn btn-primary w-full text-lg font-bold" %>
      </div>
      
    <% end %>
    </div>

   <div class="mt-4">
      <% if controller_name == "challenges" && action_name == "edit" %>
        <%= link_to "Show this challenge", @challenge, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-primary inline-block font-medium" %>
      <% end %>
      <%= link_to "Back to challenges", challenges_path, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-primary inline-block font-medium" %> 
   </div>
  
  </div>
<% else %>
  <div class="max-w-screen w-full bg-base-200 rounded-2xl shadow-xl p-8 mt-8">
    <p class="text-red-500 font-bold">
      You do not have permission to edit this challenge.
    </p>
  </div>
<% end %>