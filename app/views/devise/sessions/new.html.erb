<div class="flex flex-col items-center justify-center min-h-screen bg-base-200 w-screen">
  <div class="w-full max-w-md p-8 space-y-6 bg-base-100 rounded-lg">
    <h2 class="text-2xl font-bold text-center">Sign in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <% if alert %>
        <div role="alert" class="alert alert-error mb-4 alert-soft">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0 stroke-current" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>

          <span><%= alert %></span>
        </div>
      <% end %>
      <div class="form-control mb-4">
        <%= f.label :email, class: "label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full" %>
      </div>

      <div class="form-control mb-4">
        <%= f.label :password, class: "label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered w-full" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-control mb-4 flex flex-row items-center gap-2">
          <%= f.check_box :remember_me, class: "checkbox" %>
          <%= f.label :remember_me, class: "label cursor-pointer" %>
        </div>
      <% end %>

      <div class="form-control mt-6">
        <%= f.submit "Log in", class: "btn btn-primary w-full" %>
      </div>

    <% end %>

    <div class="mt-4 text-center">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
